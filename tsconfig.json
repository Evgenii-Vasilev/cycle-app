{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "incremental": true,
        "noImplicitAny": false,
        "target": "es2021",
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "dist"]
}
